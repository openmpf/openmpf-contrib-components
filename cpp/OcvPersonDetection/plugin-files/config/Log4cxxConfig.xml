<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- Output the log message to log file-->
  <appender name="OCV-PERSON-DETECTION-FILE" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="file" value="${MPF_LOG_PATH}/${THIS_MPF_NODE}/log/ocv-person-detection.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %p [%t] %c{36}:%L - %m%n" />
    </layout>
  </appender>

  <logger name="OcvPersonDetection" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="OCV-PERSON-DETECTION-FILE"/>
  </logger>

 </log4j:configuration>
